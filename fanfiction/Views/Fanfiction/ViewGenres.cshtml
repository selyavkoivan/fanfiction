@{
    Layout = "~/Views/Shared/_LayoutFanfiction.cshtml";
}
@model fanfiction.Models.Fanfiction.GenresModel


    <table class="table_col mt-5" style="table-layout: fixed; margin-left: 10%; width: 100%;">
        <thead style="text-align: center">
        <td colspan="2"><h2 class="lang" key="Genres-list"></h2></td>
        </thead>
        <tr>
            <th class="p-2 lang" key="Category-Name"></th>
            <th colspan="3" class="p-2 lang" key="Description"></th>
        </tr>
        @foreach (var g in Model.genres)
        {
            <tr>
                @if(Model.lang == "ru")
                {
                    <td class="clip">
                        <span class="clip" style="width: 30%">
                        @Html.ActionLink(
                            g.RuName,
                            "ReadGenre",
                            "Fanfiction",
                            new {genreId = g.GenreId})
                        </span>
                    </td>
                    <td style="width: 70%" class="clip" colspan="3">
      
                        <p class="clip">@g.RuDescription</p>
       
                    </td>
                    
                }
                else
                {
                    <td class="clip" style="width: 30%">
                        @Html.ActionLink(
                            g.EnName,
                            "ReadGenre",
                            "Fanfiction",
                            new {genreId = g.GenreId})

                    </td>
                    <td colspan="3" style="width: 70%"><p class="clip">@g.EnDescription</p></td>
                    }
                
        
            </tr>
        }   

            <tr>

                <th colspan="4" class="p-2">
                    @Html.ActionLink(
                        Model.lang == "ru" ? "+ Добавить жанр" : "+ Add genre",
                        "AddGenre",
                        "Fanfiction",
                        new {})

                </th>
            </tr>
        
    </table>

